<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <div class="user-panel text-center">
        <%= image_tag current_user.picture, class: "user-photo" %>
        <h3><%= current_user.first_name %></h3>
      </div>
    </div>
    <div class="col-xs-12 col-md-9">
      <div class="offers">
        <p>My employees available for hire</p>
        <% if current_user.posts.count > 0 %>
          <% current_user.posts.each do |post| %>
            <p><%= post.title %></p>
            <p><%= post.description %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
