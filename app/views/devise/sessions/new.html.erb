
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="user-form-container">
        <%= link_to "Sign in with Facebook",user_omniauth_authorize_path(:facebook) , class:"btn btn-primary fb-login" %>
        <div class="separator text-center">
          <span>or</span>
          <hr>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, placeholder: "email", required: false, autofocus: true, label: false %>
            <%= f.input :password, placeholder: "password", required: false, label: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:'btn btn-danger fb-login' %>
          </div>
          <hr>
          <p>Don't have an account yet? <%= link_to "sign up", new_user_registration_path %></p>

        <% end %>
      </div>
    </div>
  </div>
</div>

