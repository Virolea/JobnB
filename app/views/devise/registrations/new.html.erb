<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="user-form-container">
        <%= link_to "Sign in with Facebook",user_omniauth_authorize_path(:facebook) , class:"btn btn-primary fb-login" %>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="separator text-center">
          <span>or</span>
          <hr>
        </div>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: false, label: false, autofocus: true, placeholder: "email" %>
            <%= f.input :password, required: false, label: false, placeholder: "password" %>
            <%= f.input :password_confirmation, required: false, label: false, placeholder: "password confirmation" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class:'btn btn-danger fb-login' %>
          </div>
          <hr>
          <p>Already have an account? <%= link_to "log in", new_user_session_path %></p>
        <% end %>
    </div>
  </div>
</div>

